<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.meiglink.pocclienttestapk.MainActivity" >

    <TextView
        android:id="@+id/TV_calibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calibration_time" />

    <TextView
        android:id="@+id/TV_testtimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TV_calibration"
        android:layout_alignBottom="@+id/TV_calibration"
        android:layout_alignParentRight="true"
        android:text="@string/test_times" />

    <TextView
        android:id="@+id/TV_sendtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TV_calibration"
        android:layout_below="@+id/TV_calibration"
        android:text="0" />

    <TextView
        android:id="@+id/TV_sendtime_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TV_sendtime"
        android:layout_alignBottom="@+id/TV_sendtime"
        android:layout_alignParentRight="true"
        android:text="@string/average" />

    <TextView
        android:id="@+id/TV_recvtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TV_sendtime"
        android:layout_below="@+id/TV_sendtime"
        android:text="0" />

    <TextView
        android:id="@+id/TV_recvtime_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TV_recvtime"
        android:layout_alignBottom="@+id/TV_recvtime"
        android:layout_alignParentRight="true"
        android:text="@string/average" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TV_recvtime"
        android:layout_below="@+id/TV_recvtime"
        android:text="NTPserver" />

    <EditText
        android:id="@+id/editText_NTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/editText_NTP"
        android:text="server" />

    <EditText
        android:id="@+id/editText_Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/editText_Service"
        android:text="@string/readme" />

</RelativeLayout>